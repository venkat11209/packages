#BEGIN VIRTUAL MTAS 
<virtual-mta pmta-vmta1>
    smtp-source-host ip_1 server.domain_name
    domain-key dkim,*,/etc/opendkim/keys/domain_name/private.key
    <domain *>
        max-msg-rate 50/m
    </domain>
</virtual-mta>

#END VIRTUAL MTAS


