##### PMTA-5.7 Single Domain Multiple Ip's Config File #####

postmaster postmaster@domain_name
smtp-port 25
smtp-listener ip_1:25
smtp-listener ip_2:25
smtp-listener ip_3:25
smtp-listener ip_4:25
smtp-listener ip_5:25


<source 0/0>
	log-connections yes
	log-commands    yes      # WARNING: verbose!
  allow-unencrypted-plain-auth yes
</source>
sync-msg-create false
sync-msg-update false
run-as-root no
log-file /var/log/pmta/log        # logrotate is used for rotation

<acct-file /var/log/pmta/acct.csv>
#    move-to /opt/myapp/pmta-acct   # configure as fit for your application
#    move-interval 5m

    max-size 3G
</acct-file>

# transient errors (soft bounces)
<acct-file /var/log/pmta/diag.csv>
  move-interval 1d
  delete-after never
  records t
</acct-file>

#
# spool directories
#

spool /var/spool/pmta

http-mgmt-port 19000
http-access 127.0.0.1 admin
http-access 0/0 monitor
#http-access 103.166.221.15 admin


############################################################################
# END: OTHER OPTIONS
